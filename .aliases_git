alias gc="git commit -m"
alias ga="git add "
alias gaa="git add -A"
alias gaac="git add -A && git commit -m"
alias gca="git commit --amend"
alias amend="git commit -v --amend --no-edit"
alias gaaa="git add -A && git commit -v --amend --no-edit"
alias gco="git checkout"
alias g-="git checkout -"
alias gm="git merge"
alias gs="git status"

alias gst="git stash"
alias gstp="git stash pop"
alias gsta="git stash apply"
alias gstd="git stash drop"

alias gr="git reset @^"
alias nah="git reset --hard && git clean -fd"
alias wip="git add -A && git commit -m 'wip'"

alias gb="git branch"
alias gl="git --no-pager log -25 --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias gl100="git --no-pager log -100 --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cs) %C(bold blue)<%an>%Creset' --abbrev-commit"

alias push="git push"
alias repush="git push --force"
alias pull="git pull"
alias repull="git reset --hard HEAD~1;git pull"
